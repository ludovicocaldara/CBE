cat <<EOF
listen_addresses = '*'
cluster_name = ${CBE_PG_CLUSTER}
max_connections = 100
shared_buffers = 512MB
work_mem = 8MB
maintenance_work_mem = 128MB
dynamic_shared_memory_type = posix
wal_level = replica
wal_keep_size = 96
max_wal_senders = 10
max_replication_slots = 10
checkpoint_timeout = 3min
archive_mode = on
archive_command = 'test ! -f ${CBE_PG_ARCHIVE_DEST}/%f && cp %p ${CBE_PG_ARCHIVE_DEST}/%f'
archive_timeout = 1800
lo_compat_privileges = on
logging_collector = on
log_directory = 'log'
log_filename = '${CBE_PG_CLUSTER}-%Y-%m-%d_%H%M%S.log'
log_file_mode = 0660
log_rotation_age = 1d
log_rotation_size = 200MB
log_timezone = 'Europe/Vaduz'
track_io_timing = on
track_functions = pl
datestyle = 'iso, mdy'
timezone = 'Europe/Vaduz'
lc_messages = 'en_US.UTF8'
lc_monetary = 'en_US.UTF8'
lc_numeric = 'en_US.UTF8'
lc_time = 'en_US.UTF8'
default_text_search_config = 'pg_catalog.english'
max_locks_per_transaction = 128
max_pred_locks_per_transaction = 128
ssl_ca_file = 'root.crt'
ssl_cert_file = 'server.crt'
ssl_key_file = 'server.key'
ssl = on
shared_preload_libraries = 'pg_stat_statements'
pg_stat_statements.max = 5000
pg_stat_statements.track = all
EOF
